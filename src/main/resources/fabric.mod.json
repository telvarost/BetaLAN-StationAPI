{
  "schemaVersion": 1,
  "id": "betalan",
  "version": "${version}",

  "name": "BetaLAN",
  "description": "Allows easily launching a server using the currently loaded single-player world and currently in use mod-set/configuration.",
  "authors": [
    "Telvarost"
  ],
  "contact": {
    "issues": "https://github.com/telvarost/SaveAsServer-StationAPI/issues",
    "homepage": "https://github.com/telvarost/SaveAsServer-StationAPI/",
    "sources": "https://github.com/telvarost/SaveAsServer-StationAPI/"
  },

  "license": "MIT",
  "icon": "assets/betalan/icon.png",

  "environment": "*",
  "accessWidener": "betalan.accesswidener",
  "entrypoints": {
    "stationapi:event_bus": [
      "com.github.telvarost.betalan.BetaLAN"
    ],
    "stationapi:event_bus_client": [
    ],
    "stationapi:event_bus_server": [
    ],
    "gcapi3": [
      "com.github.telvarost.betalan.Config"
    ]
  },
  "mixins": [
    "betalan.mixins.json"
  ],
  
  "depends": {
    "minecraft": "1.0.0-beta.7.3",
    "stationapi": "*"
  },

  "recommends": {
    "gcapi3": ">=3.0.2",
    "modmenu": "*"
  }
}
